<div class="col-sm-4">
  
  <!-- Team member -->
  <div class="team__member <%= "team__member_chief" if (team_member.sort+1)%3==0 %>">

    <!-- Avatar -->
    <div class="team-member__avatar">
      <%= image_tag team_member.photo, class: "img-responsive" %>
    </div>

    <!-- Info -->
    <h4 class="team-member__name">
      <%= I18n.locale == :en ? team_member.name : team_member.ru_name %>
    </h4>
    <p class="team-member__info">
      <%= I18n.locale == :en ? team_member.info : team_member.ru_info %>
    </p>
    
    <!-- Contact -->
    <div class="team-member__contact">
      <% if !team_member.fb.blank? %>
        <%= link_to team_member.fb, class: "team-member-contact__item facebook" do  %>
          <i class="fa fa-facebook"></i>
        <% end %>
      <% end %>
      <% if !team_member.vk.blank? %>
        <%= link_to team_member.vk, class: "team-member-contact__item twitter" do  %>
          <i class="fa fa-vk"></i>
        <% end %>
      <% end %>
    </div>
    
  </div> <!-- / .team__member -->

</div>